{
  "name": "wcpos",
  "version": "0.0.1",
  "main": "packages/web/src/index.tsx",
  "repository": "https://github.com/wcpos/client",
  "author": "kilbot",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@wcpos/mobile/react-native",
      "@wcpos/mobile/react-native/**",
      "@wcpos/mobile/react-native-*",
      "@wcpos/mobile/react-native-*/**",
      "@wcpos/mobile/@nozbe/watermelondb",
      "@wcpos/mobile/@nozbe/watermelondb/**"
    ]
  },
  "scripts": {
    "dev:web": "yarn workspace @wcpos/web start",
    "dev:desktop": "yarn workspace @wcpos/desktop start",
    "dev:mobile": "yarn workspace @wcpos/mobile start",
    "dev:storybook": "yarn workspace @wcpos/storybook start",
    "clean": "yarn workspaces run clean && yarn cache clean && shx rm -rf yarn.lock && rm -rf node_modules",
    "version": "yarn workspaces run version --no-git-tag-version --new-version $npm_package_version && yarn workspace @wcpos/mobile postversion",
    "postversion": "git push --tags && yarn publish . --tag $npm_package_version && git push && echo \"Successfully released version $npm_package_version!\"",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "7.6.0",
    "@typescript-eslint/eslint-plugin": "2.2.0",
    "@typescript-eslint/parser": "2.2.0",
    "babel-eslint": "10.0.3",
    "eslint": "6.3.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-config-react-app": "5.0.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-flowtype": "4.3.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "2.0.1",
    "eslint-plugin-react-native": "3.7.0",
    "jest": "24.9.0",
    "patch-package": "6.1.4",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.18.2",
    "shx": "0.3.2"
  },
  "dependencies": {
  }
}
