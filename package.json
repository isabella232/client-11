{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kilbot/boilerplate",
  "author": "kilbot",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native", 
      "**/react-native/**"
    ]
  },
  "scripts": {
    "dev:web": "yarn workspace @boilerplate/web start",
    "dev:desktop": "yarn workspace @boilerplate/desktop start",
    "dev:mobile": "yarn workspace @boilerplate/mobile start",
    "clean": "yarn workspaces run clean && yarn cache clean && shx rm -rf yarn.lock && rm -rf node_modules"
  },
  "devDependencies": {
    "jest": "23.6.0",
    "shx": "^0.3.2"
  }
}
